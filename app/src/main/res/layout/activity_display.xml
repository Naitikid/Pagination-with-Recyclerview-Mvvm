<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
    <variable
        name="displayviewmodelxml"
        type="com.example.mypostapicallingtest.displayActivity.Displayviewmodel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".displayActivity.DisplayActivity">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/dimens_0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_launcher_background"
            android:id="@+id/displayimage"
            android:layout_marginTop="@dimen/dimens_40dp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/displayname"
            android:layout_width="@dimen/dimens_0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/displayimage"
            android:layout_marginTop="@dimen/dimens_20dp"
            android:gravity="center"
            android:text="@string/displayname" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/displayemail"
            android:layout_width="@dimen/dimens_0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/displayname"
            android:layout_marginTop="@dimen/dimens_20dp"
            android:gravity="center"
            android:text="@string/user_email" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>